{
	"name" : "__MSG_extName__",
	"version" : "2.4.3",
	"description" : "__MSG_extDescription__",
	"default_locale" : "ru",
	"icons" : {
		"128" : "pic/icon128.png",
		"48" : "pic/icon48.png",
		"16" : "pic/icon16.png"
	},
	"manifest_version" : 2,
    "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"browser_action" : {
		"default_icon": "pic/icon19.png",
		"default_title": "__MSG_extName__"
	},
	"background": {
        "scripts": [
            "js/counter.js",
            "js/settings.js",
            "js/utils.js",
            "js/background.js"
        ]
    },
    "offline_enabled" : false,
    "options_page" : "options.html",
    "minimum_chrome_version" : "22",
    "permissions": [
        "alarms",
        "background",
        "notifications",
        "storage",
        "tabs",
        "unlimitedStorage",
        "*://*.userapi.com/*",
        "*://*.vk.me/*",
        "*://*.vk.me/*"
    ],
    "content_scripts" : [{
		"matches" : ["*://*.vk.com/*"],
		"js" : ["js/contentscript.js"]
	}]
}
